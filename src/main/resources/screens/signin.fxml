<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #1e293b, #0f172a);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>

        <!-- Title -->
        <Text layoutX="30.0" layoutY="60.0" style="-fx-fill: white;" text="Welcome">
            <font>
                <Font size="36.0" />
            </font>
        </Text>
        <Text layoutX="30.0" layoutY="85.0" style="-fx-fill: #cbd5f5;" text="Please sign in or create an account">
            <font>
                <Font size="14.0" />
            </font>
        </Text>

        <!-- Main container for Sign Up / Sign In cards -->
        <HBox layoutX="30.0" layoutY="110.0" spacing="20.0">
            <children>

                <!-- SIGN UP CARD -->
                <VBox prefHeight="240.0" prefWidth="260.0" spacing="10.0" style="-fx-background-color: rgba(15,23,42,0.9);                              -fx-background-radius: 16;                              -fx-padding: 18;">
                    <children>
                        <Text style="-fx-fill: white;" text="Sign Up">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Text>

                        <TextField promptText="Username" style="-fx-background-radius: 10;                                           -fx-padding: 8;                                           -fx-background-color: #020617;                                           -fx-text-fill: white;                                           -fx-prompt-text-fill: #64748b;" />

                        <TextField promptText="Email" style="-fx-background-radius: 10;                                           -fx-padding: 8;                                           -fx-background-color: #020617;                                           -fx-text-fill: white;                                           -fx-prompt-text-fill: #64748b;" />

                        <PasswordField promptText="Password" style="-fx-background-radius: 10;                                               -fx-padding: 8;                                               -fx-background-color: #020617;                                               -fx-text-fill: white;                                               -fx-prompt-text-fill: #64748b;" />

                        <Button prefHeight="36.0" style="-fx-background-radius: 10;                                        -fx-background-color: #22c55e;                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-cursor: hand;                                        -fx-padding: 6 14 6 14;" text="Create Account" />
                    </children>
                </VBox>

                <!-- SIGN IN CARD -->
                <VBox prefHeight="240.0" prefWidth="260.0" spacing="10.0" style="-fx-background-color: rgba(15,23,42,0.9);                              -fx-background-radius: 16;                              -fx-padding: 18;">
                    <children>
                        <Text style="-fx-fill: white;" text="Sign In">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Text>

                        <TextField promptText="Email" style="-fx-background-radius: 10;                                           -fx-padding: 8;                                           -fx-background-color: #020617;                                           -fx-text-fill: white;                                           -fx-prompt-text-fill: #64748b;" />

                        <PasswordField promptText="Password" style="-fx-background-radius: 10;                                               -fx-padding: 8;                                               -fx-background-color: #020617;                                               -fx-text-fill: white;                                               -fx-prompt-text-fill: #64748b;" />

                        <Button prefHeight="36.0" style="-fx-background-radius: 10;                                        -fx-background-color: #3b82f6;                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-cursor: hand;                                        -fx-padding: 6 14 6 14;" text="Sign In" />

                        <Text style="-fx-fill: #9ca3af;" text="Forgot your password?">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Text>
                    </children>
                </VBox>

            </children>
        </HBox>

    </children>
</AnchorPane>
