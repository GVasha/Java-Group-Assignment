<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #1e293b, #0f172a);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <children>

        <!-- Title -->
        <Text layoutX="30.0" layoutY="60.0" style="-fx-fill: white;" text="Welcome">
            <font>
                <Font size="36.0" />
            </font>
        </Text>
        <Text layoutX="30.0" layoutY="85.0" style="-fx-fill: #cbd5f5;" text="Please log in">
            <font>
                <Font size="14.0" />
            </font>
        </Text>

        <!-- LOGIN CARD -->
        <VBox layoutX="106.0" layoutY="115.0" prefHeight="240.0" prefWidth="389.0" spacing="10.0" style="-fx-background-color: rgba(15,23,42,0.9);                      -fx-background-radius: 16;                      -fx-padding: 18;">
            <children>
                <Text style="-fx-fill: white;" text="Login">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>

                <Text fx:id="formMessage"
                      visible="false"
                      style="-fx-fill: white;"
                      wrappingWidth="330" />

                <TextField fx:id="emailLogin" promptText="Email" style="-fx-background-radius: 10;                                   -fx-padding: 8;                                   -fx-background-color: #020617;                                   -fx-text-fill: white;                                   -fx-prompt-text-fill: #64748b;" />

                <PasswordField fx:id="passwordLogin" promptText="Password" style="-fx-background-radius: 10;                                       -fx-padding: 8;                                       -fx-background-color: #020617;                                       -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b;" />

                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="36.0" style="-fx-background-radius: 10;                                -fx-background-color: #3b82f6;                                -fx-text-fill: white;                                -fx-font-weight: bold;                                -fx-cursor: hand;                                -fx-padding: 6 14 6 14;" text="Login" />

                <Text style="-fx-fill: #9ca3af;" text="Forgot your password?">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Text>

                <!-- Switch to Sign Up -->
                <HBox spacing="6.0">
                    <children>
                        <Text style="-fx-fill: #9ca3af;" text="Don't have an account?">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Text>
                        <Button onAction="#handleGoToSignUp" style="-fx-background-color: transparent;                                        -fx-text-fill: #3b82f6;                                        -fx-padding: 0;                                        -fx-font-size: 11;" text="Sign up" />
                    </children>
                </HBox>

            </children>
        </VBox>

    </children>
</AnchorPane>
